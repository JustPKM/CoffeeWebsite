@model IEnumerable<Coffee.Models.Donhang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ngaydat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diachi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tongtien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trangthai)
            </th>
            <th>Tác vụ</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Ngaydat
            </td>
            <td>
                @item.Diachi
            </td>

            <td>
                @item.Customer.HoTen
            </td>
            <td>
                @item.Employee.HoTen
            </td>
            <td>
                @item.Tongtien
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trangthai)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.DonhangId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
