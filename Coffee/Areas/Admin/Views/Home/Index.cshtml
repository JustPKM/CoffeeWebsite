@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeeManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Coffee.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light pg-lib-item py-lg-1" data-navbar-id="{bs-navbar}" style="z-index:9;position:relative;">
            <div class="container-fluid">
                <a class="fw-bold text-white navbar-brand ms-3 fs-4" asp-controller="Home" asp-action="Index">Coffingme</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-between">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white px-lg-3 py-lg-4" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white px-lg-3 py-lg-4" asp-area="" asp-controller="Home" asp-action="Menu">Thực đơn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white px-lg-3 py-lg-4" asp-area="" asp-controller="Home" asp-action="About">Về chúng tôi</a>
                        </li>
                    </ul>
                </div>
            </div>

        </nav>
    </header>


    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" style="height:100vh;">
                <img src="WebImage/carousel-1.jpg" class="w-100">
                <div class="carousel-caption flex-column d-flex h-100 align-items-center justify-content-center">
                    <h2 class="text-primary font-weight-medium m-0">WELCOME</h2>
                    <h1 class="display-1 text-white m-0">COFFEE</h1>
                </div>
            </div>
            <div class="carousel-item" style="height:100vh;">
                <img src="WebImage/carousel-2.jpg" class="w-100">
                <div class="carousel-caption flex-column d-flex h-100 align-items-center justify-content-center ">
                    <h2 class="text-primary font-weight-medium m-0">WELCOME</h2>
                    <h1 class="display-1 text-white m-0">COFFEE</h1>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CoffeeManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
